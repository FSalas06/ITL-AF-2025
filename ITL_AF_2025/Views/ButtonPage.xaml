<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ITL_AF_2025.Views.ButtonPage"
    BackgroundColor="{StaticResource Gray600}"
    >
    <Grid
        RowDefinitions="auto, *, auto"
        Padding="20">
        <Label
            Grid.Row="0"
            Text="Welcome to Foro academico 2025!"
            TextColor="White"
            Style="{StaticResource labelPrimaryStyle}"/>

        <StackLayout
            Grid.Row="1"
            VerticalOptions="Center">

            <Label
                Text="{Binding FirstText}"
                Style="{StaticResource labelSecondaryStyle}">
                <Label.Triggers>
                    <DataTrigger
                        TargetType="Label"
                        Binding="{Binding LocalCount}"
                        Value="10">
                        
                        <Setter Property="TextColor" Value="Black"/>
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <Label
                Text="{Binding FirstText}"
                Style="{StaticResource labelSecondaryStyle}">
                <Label.Triggers>
                    <DataTrigger
                        TargetType="Label"
                        Binding="{Binding LocalCount}"
                        Value="20">
                        
                        <Setter Property="TextColor" Value="Blue"/>
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <Label
                Text="{Binding FirstText}"
                Style="{StaticResource labelSecondaryStyle}">
                <Label.Triggers>
                    <DataTrigger
                        TargetType="Label"
                        Binding="{Binding LocalCount}"
                        Value="30">
                        
                        <Setter Property="TextColor" Value="Green"/>
                    </DataTrigger>
                </Label.Triggers>
            </Label>

        </StackLayout>
  
        <Button
            Grid.Row="2"
            Command="{Binding PlusCommand}"
            Text="Plus +1"
            Style="{StaticResource buttonPrimaryStyle}"/>
    </Grid>
</ContentPage>
