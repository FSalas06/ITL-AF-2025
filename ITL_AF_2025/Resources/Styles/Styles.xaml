<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="labelPrimaryStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="20" />
    </Style>

     <Style x:Key="labelSecondaryStyle" BasedOn="{StaticResource labelPrimaryStyle}" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Magenta}" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style x:Key="buttonPrimaryStyle" TargetType="Button" >
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Magenta}, Dark={StaticResource Gray950}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="7" />
        <Setter Property="TextColor" Value="White" />
    </Style>

</ResourceDictionary>

